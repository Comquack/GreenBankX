<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:oxy="clr-namespace:OxyPlot.Xamarin.Forms;assembly=OxyPlot.Xamarin.Forms"
             x:Class="GreenBankX.ManagePlots">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ToolDelete" Order="Primary"  Text="" Priority="0" Clicked="DelPlot"/>
        <ToolbarItem x:Name="ToolAddTree" Order="Primary"  Text="" Priority="1" Clicked="AddNewTree" />
        <ToolbarItem x:Name="ToolDeleteTree" Order="Primary"  Text="" Priority="2" Clicked="DelTree"/>
        <ToolbarItem x:Name="ToolAddMes" Order="Primary"  Text="" Priority="3" Clicked="AddTreeMes"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>

        <StackLayout>
            <Label Text="Manage Plots"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Picker x:Name="pickPlot" Title="Select a Plot"
                    SelectedIndexChanged="SelectPlot"
                        TextColor="Black">
                <Picker.Items>
                </Picker.Items>
            </Picker>

            <Grid x:Name="Graphgrid"
                IsVisible="True"
                  MinimumHeightRequest="100">
                <Label x:Name="ListOfTree" 
                Text="Manage Plots"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                       Grid.Row="0"/>
                <Button
                    Text="Earlier"
                    />
                <oxy:PlotView
                x:Name="Oxy"
                IsVisible="False"
                Grid.Row="1"
                />
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="70*" />
                </Grid.RowDefinitions>
            </Grid>
            <Picker x:Name="pickTree" Title="Select a Tree"
                    SelectedIndexChanged="SelectTree"
                        TextColor="Black"
                    IsVisible="False">
                <Picker.Items>
                </Picker.Items>

            </Picker>
            <Button x:Name="AddTree"
                    Text="Add Tree"
                    Clicked="AddNewTree"
                    IsVisible="False"/>
            <Button x:Name="AddMes"
                    Text="Add new Mesurement"
                    Clicked="AddTreeMes"
                    IsVisible="False"/>
            <Button x:Name="DeleteTree"
                    Text="Delete Tree"
                    Clicked="DelTree"
                    IsVisible="False"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>