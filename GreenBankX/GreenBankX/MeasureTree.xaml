<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:local="clr-namespace:GreenBankX"
             x:Class="GreenBankX.MeasureTree">
    <ContentPage.Content>
        <StackLayout>
            
                <Entry  
                x:Name="girth"
                   TextColor="Black"
                   Keyboard="Numeric"
                   Placeholder="{local:TranslateExtension Girth}"/>
            <Entry 
                x:Name="height"
                   TextColor="Black"
                    Keyboard="Numeric"
                   Placeholder="{local:TranslateExtension Height}"/>

            <Picker x:Name="pickPrice" Title="{local:TranslateExtension SelectPricing}"
                        TextColor="Black"
                    SelectedIndexChanged="pickPrice_SelectedIndexChanged">
                <Picker.Items>
                </Picker.Items>
            </Picker>
            <Picker x:Name="pickPlot" Title="{local:TranslateExtension SelectaPlot}"
                        TextColor="Black"
                    SelectedIndexChanged="pickPlot_SelectedIndexChanged">
                <Picker.Items>
                </Picker.Items>
            </Picker>

            <Button
                x:Name="Estimate"
               Text="Measure"
               VerticalOptions="Center"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
                BackgroundColor="LightGray"
               TextColor="Green"
                Grid.Column="1"
                Grid.Row="4"
                Clicked="RunCalc"/>
            <Button
                x:Name="Add"
               Text="{local:TranslateExtension AddtoPlot}"
               VerticalOptions="Center"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
                BackgroundColor="LightGray"
               TextColor="Green"
                Grid.Column="1"
                Grid.Row="4"
                Clicked="RunAdd"/>

            <Grid>
                <Label
                x:Name="Result0"
                Grid.Column="0"/>
                <Label
                x:Name="Result1"
                Grid.Column="1"/>
                <Label
                x:Name="Result2"
                Grid.Column="2"/>
                <Label
                x:Name="Result"/>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33*" />
                    <ColumnDefinition Width="33*" />
                    <ColumnDefinition Width="33*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </StackLayout>
        </ContentPage.Content>
        <ContentPage.BackgroundColor>
        <Color>
            #66ff99
        </Color>
    </ContentPage.BackgroundColor>
</ContentPage>