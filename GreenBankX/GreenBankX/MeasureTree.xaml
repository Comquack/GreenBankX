<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenBankX.MeasureTree">
    <ContentPage.Content>
        <StackLayout>
            <Entry  
                   TextColor="Black"
                   Keyboard="Numeric"
                   Placeholder="Girth (cm)"/>
            <Entry 
                   TextColor="Black"
                    Keyboard="Numeric"
                   Placeholder="Height (m)"/>
 
                <Picker x:Name="picker" Title="Select a currency"
                        TextColor="Black">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Laotian Kip</x:String>
                            <x:String>US Dollar</x:String>
                            <x:String>Euro</x:String>
                    </x:Array>
                    </Picker.ItemsSource>
                </Picker>

            <Button
                x:Name="Estimate"
               Text="Measure"
               VerticalOptions="Center"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
                BackgroundColor="LightGray"
               TextColor="Green"
                Grid.Column="1"
                Grid.Row="4"/>
            <Button
                x:Name="Add"
               Text="Add to plot"
               VerticalOptions="Center"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
                BackgroundColor="LightGray"
               TextColor="Green"
                Grid.Column="1"
                Grid.Row="4"/>
        </StackLayout>
    </ContentPage.Content>
        <ContentPage.BackgroundColor>
        <Color>
            #FFFFF0
        </Color>
    </ContentPage.BackgroundColor>
</ContentPage>