<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:local="clr-namespace:GreenBankX"
    x:Class="GreenBankX.NotPopup">
    <!--You can set an animation in the xaml file or in the csharp code behind-->
    <ScrollView>
        <StackLayout 
        HorizontalOptions="Center" 
        Padding="20, 20, 20, 20">
        <Label
            x:Name="NameLabel"
            Text="Name Plot"
            />
        <Entry 
                x:Name="PlotName"
                   TextColor="Black"
                   Placeholder="{local:TranslateExtension Name}"/>
        <Entry 
                x:Name="PlotYear"
                   TextColor="Black"
                   Placeholder="Year Planted"
            Keyboard="Numeric"
            MaxLength="4"
            />
        <Button Text="Add from map"
                Clicked="Button_Clicked"/>
        
        <Grid>

            <Entry
            x:Name="Latent"
            Placeholder="Latitude"
            IsVisible="False"
                Grid.Column="0"
                Keyboard="Numeric"
                TextChanged="Latent_TextChanged"/>
            <Entry
            x:Name="Longent"
            Placeholder="Longitude"
            IsVisible="False"
                Keyboard="Numeric"
                TextChanged="Longent_TextChanged"
                Grid.Column="1"/>
        </Grid>

            <Picker x:Name="pickPrice" Title="{local:TranslateExtension SelectPricing}"
                        TextColor="Black"
                SelectedIndexChanged="pickPrice_SelectedIndexChanged"
                IsVisible="True"
                >
            <Picker.Items>
            </Picker.Items>
        </Picker>

        <Entry
            x:Name="Location"
            Placeholder="Nearest Town"
            IsVisible="False"/>
        <Entry
            x:Name="Owner"
            Placeholder="Owner's Name"
            IsVisible="False"/>
        <Entry
            x:Name="Comments"
            Placeholder="Other Comments"
            IsVisible="False"/>
        <Button
                   x:Name="Expand"
               Text="Add more details"
               VerticalOptions="Center"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
                BackgroundColor="LightGray"
               TextColor="Green"
                Clicked="Expand_Clicked"
                />
        <Button
                   x:Name="NamedPlot"
               Text="{local:TranslateExtension AddPlot}"
               VerticalOptions="Center"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
                BackgroundColor="LightGray"
               TextColor="Green"
                Clicked="Done"
                />

    </StackLayout>
        </ScrollView>
</ContentPage>